<p id="notice"><%= notice %></p>
<section class="container-fluid bg_full_width_workshop">
</section>

<div class="canvas">
  <%= link_to 'Créer un Workshop', controller: "create_workshop" %>
  <h4><i class="fa fa-list" aria-hidden="true"></i> Workshops</h4>

  <% @workshops.each do |workshop| %>
    <div class="each_workshop">
      <%= link_to workshop.name, workshop %>
      <!-- <div class="action_workshop">
        <%= link_to (content_tag(:i, nil, class: 'fa fa-pencil-square-o')), edit_workshop_path(workshop) %>
        <%= link_to (content_tag(:i, nil, class: 'fa fa-trash-o')), workshop, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div> -->
    </div>
  <% end %>
</div>

<div class="container-fluid full_width last_workshop_view">
  <div class="content">

    <% if Workshop.count != 0 %>
      <div class="actions_workshop">
        <%= link_to (content_tag(:i, nil, class: 'fa fa-pencil-square-o')), edit_workshop_path(@workshop_last) %>
        <%= link_to (content_tag(:i, nil, class: 'fa fa-trash-o')), @workshop_last, method: :delete, data: { confirm: I18n.t('views.are_you_sure') } %>
      </div>
        <div class="row">
          <div class="col-md-12 title_workshop">
            <div class="filter">
              <h1>Dernier Workshop créé</h1>
            </div>
          </div>
        </div>

        <div class="row wrapper_informations">

          <div class="col-md-6 col-sm-12">
            <div class="line_title">
              <h3><i class="fa fa-info" aria-hidden="true"></i> Informations</h3>
            </div>

            <div class="informations">
              <ul>
                <li><span class="attribut">Titre :</span> <%= @workshop_last.name %></li>
                <li><span class="attribut">Créé par :</span> <%= @workshop_last.user.firstname %></li>
                <li><span class="attribut">Professeur(s) associé(s) :</span> <%= @workshop_last.teacher %></li>
                <li><span class="attribut">Date de début :</span> <span class="beginDate"><%= @workshop_last.begins %></span></li>
                <li><span class="attribut">Date de fin :</span> <span class="endDate"><%= @workshop_last.ends %></span></li>
              </ul>
            </div>

            <div class="line_title">
              <h3><i class="fa fa-comment" aria-hidden="true"></i> Description</h3>
            </div>

            <div class="description">
              <p><%= @workshop_last.description %></p>
            </div>
          </div>

          <div class="col-md-6 col-sm-12">
            <div class="line_title">
              <h3><i class="fa fa-users" aria-hidden="true"></i> Les projets</h3>
            </div>
            <div class="every_projects">
              <% total = @total %>
              <% @project.each do |project| %>
                <div class="group">
                  <% if @id_last == project.workshop_id %> <!-- Display project associated to this workshop by id (last workshop only) -->
                    <p><%= project.name %></p>
                    <% project.users.each do |users| %>
                    <ul>
                      <li><%= users.firstname %>
                      <%= users.lastname %>
                      <% if users.status == '1' %>
                        <%= users.status %></li>
                      <% end %>
                    </ul>
                    <% end %>
                    <% if(@workshop_last.teamgeneration==1) %>
                      <%  %> <!-- search Work where user isn't present -->
                      <% if(total==@workshop_last.teamnumber) %> <!-- if user don't have select a group display button 'S ajouter' for join a group -->
                        <%= link_to "S\'ajouter", {:controller => :workshops, :action => :addto, :id_user => current_user, :id_group => project.id, :id_workshop => @workshop_last.id }%>
                      <% else %>
                        <% if @work.blank? %> <!-- if user have select a group display button 'Switch' for switch group -->
                          <%= link_to "Switch", {:controller => :workshops, :action => :switchto, :id_user => current_user, :id_group => project.id, :id_group_current => @current_project, :id_workshop => @workshop_last.id }%>
                        <li class="button_link"><%= link_to "S\'ajouter", {:controller => :workshops, :action => :addto, :id_user => current_user, :id_group => project.id, :id_workshop => @workshop_last.id }%></li>
                      <% else %>
                        <% if Work.where('user_id = ? AND project_id= ?', current_user, project.id ).blank? %> <!-- if user have select a group display button 'Switch' for switch group -->
                          <li class="button_link"><%= link_to "Switch", {:controller => :workshops, :action => :switchto, :id_user => current_user, :id_group => project.id, :id_group_current => @current_project, :id_workshop => @workshop_last.id }%></li>
                        <% end %>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      <div class='col-md-offset-2 col-md-8' id="pbar_outerdiv">
        <div id="pbar_innertext"></div>
      </div>

      <% else %>
        <div class="row">
          <div class="col-md-12 no_project">
            <%= link_to (content_tag(:i, nil, class: 'fa fa-plus-square-o')), controller: "create_workshop" %><br />
            Aucun projet :(
          </div>
        </div>
      <% end %> <!-- end if -->
    </div>
  </div>
