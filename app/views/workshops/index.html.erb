<p id="notice"><%= notice %></p>

<h1>Workshops</h1>

<%= link_to 'New Workshop', controller: "create_workshop" %>


<% if Workshop.count != 0 %> <!-- If there is no workshop, don't print on the screen -->
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Createdby</th>
        <th>Teacher</th>
        <th>Begins</th>
        <th>Ends</th>
        <th>Teamgeneration</th>
        <th>Teamnumber</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @workshop_last.name %></td>
          <td><%= @workshop_last.description %></td>
          <td><%= @workshop_last.user.firstname %></td>
          <td><%= @workshop_last.teacher %></td>
          <td><%= @workshop_last.begins %></td>
          <td><%= @workshop_last.ends %></td>
          <td><%= @workshop_last.teamgeneration %></td>
          <td><%= @workshop_last.teamnumber %></td>
          <td><%= link_to 'Show', @workshop_last %></td>
          <td><%= link_to 'Edit', edit_workshop_path(@workshop_last) %></td>
          <td><%= link_to 'Destroy', @workshop_last, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </tbody>
  </table>

  <% @project.each do |project| %>
    <% if @id_last == project.workshop_id %> <!-- Display project associated to this workshop by id (last workshop only) -->
      <%= project.name %>
    <% end %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Createdby</th>
        <th>Teacher</th>
        <th>Begins</th>
        <th>Ends</th>
        <th>Teamgeneration</th>
        <th>Teamnumber</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @workshops.each do |workshop| %>
        <tr>
          <td><%= workshop.name %></td>
          <td><%= workshop.description %></td>
          <td><%= workshop.user.firstname %></td>
          <td><%= workshop.teacher %></td>
          <td><%= workshop.begins %></td>
          <td><%= workshop.ends %></td>
          <td><%= workshop.teamgeneration %></td>
          <td><%= workshop.teamnumber %></td>
          <td><%= link_to 'Show', workshop %></td>
          <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
          <td><%= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

Il n'y a pas de projet.

<% end %> <!-- end if -->



