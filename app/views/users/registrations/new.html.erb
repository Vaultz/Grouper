<h2>Inscription</h2>
<h3>Attention : une seule inscription par étudiant !</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :prénom %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :numéro_de_téléphone %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :début_de_l_année %><br />
    <%= f.date_field :year %>
  </div>

  <!-- While subscribing, the user decides which role to take -->
  <div class="field">
    <%= f.label :statut %><br />
    <%= f.select :status, options_for_select([['Étudiant (non chef de projet)', 0], ['Étudiant (chef de projet)', 1], ['Prof/intervenant', 2]]); %>    
  </div>


  <div class="field">
    <%= f.label :mot_de_passe %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Valider" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
