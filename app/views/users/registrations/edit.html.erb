<section class="container-fluid bg_full_width">
  <div class="filter">
  </div>
</section>

<div class="container-fluid full_width inscription">
  <div class="content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <!--<%= devise_error_messages! %>-->

      <div class="design_form row">

        <div class="col-md-offset-3 col-md-6">
          <h2>Edit <%= resource_name.to_s.humanize %></h2>
        </div>


        <div class="col-md-offset-3 col-md-6">
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "email" %>
          </div>
          <!-- While subscribing, the user decides which role to take -->
          <div class="field">
            <%= f.label :statut %>
            <%= f.select :status, options_for_select([['Étudiant (non chef de projet)', 0], ['Étudiant (chef de projet)', 1], ['Prof/intervenant', 2]]); %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
            <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "Nouveau mot de passe" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation du nouveau mot de passe" %>
          </div>

          <div class="field">
            <%= f.password_field :current_password, autocomplete: "off", placeholder: "Votre mot de passe actuel" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <div class="actions">
            <%= f.submit "Update", class: "button_link" %>
          </div>
        </div>
      </div>

      <% end %>

      <div class="row">
        <div class="col-md-offset-3 col-md-6 confirm_delete">
          <h4>Cancel my account</h4>

          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: I18n.t('views.are_you_sure') }, method: :delete %>

          <%= link_to "Retour sur la page précédente", :back %>
        </div>
      </div>

  </div>
</div>
