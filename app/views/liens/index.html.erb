<section class="container-fluid bg_full_width">
  <div class="filter">
  </div>
</section>


<div class="container-fluid full_width inscription">
  <div class="content">

    <div class="row">
      <div class="col-md-12">
        <h1>Liens utiles</h1>
      </div>
    </div>

    <div class="design_form row">
      <div class="col-md-offset-2 col-md-8">
        <table>
          <thead>
            <tr>
              <th>Nom</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @liens.each do |lien| %>
            <tr>
              <td>
                <% if lien.logo != nil %>
                  <%= image_tag lien.logo, width: 60, height: 60, alt: lien.name %>
                <% end %>
              </td>
              <td>
                <%= lien.name %>
              </td>
              <td>
                <%= link_to 'Modifier', edit_lien_path(lien) %>
              </td>
              <td>
                <%= link_to 'Supprimer', lien, method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
      </table>

      <br>

      <%= link_to 'Nouveau lien', new_lien_path %>
      </div>
    </div>



                    </div>
                  </div>
